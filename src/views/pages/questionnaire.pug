extends ../layouts/master.pug

include  ../components/navigation
include  ../components/form-components

block content 
  -
    var ddata = {
      first: [
        {
          type: 'text',
          name: 'name',
          placeholder: 'Name'
        },
        {
          type: 'text',
          name: 'surname',
          placeholder: 'Surname'
        },
        {
          type: 'text',
          name: 'dob',
          placeholder: 'DOB (dd.mm.yyyy)'
        }
      ],
      second: [
        {
          type: 'text',
          name: 'citizenship',
          placeholder: 'Citizenship'
        },
        {
          type: 'text',
          name: 'passport-number',
          placeholder: 'Passport number'
        },
        {
          type: 'text',
          name: 'passport-issue',
          placeholder: 'Passport issue date (dd.mm.yyyy)'
        },
        {
          type: 'text',
          name: 'passport-expire',
          placeholder: 'Passport expiry date (dd.mm.yyyy)'
        },
      ]
    }
  .booking-page
    section.section.section--first
      .container
        .navigation   
          .navigation__inner
            .breadcrumb(data-aos='fade-up') 
              ul.breadcrumb__list 
                li.breadcrumb__item 
                  a.breadcrumb__link(href="#") 
                    |Home
                li.breadcrumb__item.breadcrumb__item--active 
                  a.breadcrumb__link(href="#")
                    |Booking an excursion
          .booking-page__wrapper(data-aos='fade-up') 
            h1
              |Please fill out the application form for obtaining tour tickets (blanket visas)
    section.section.section--md 
      .container
        .booking-page__row 
          .booking-page__col
            form.form(action="/")
              template(data-guests-template='')
                .booking-page__inner  
                  h3.form__title.form__title--left(data-aos='fade-up' data-guests-title='') 
                    |Guest 1
                  .booking-page__top
                    .booking-page__item
                      each item in ddata.first
                        .form__item(data-aos='fade-up')  
                          +input(name = item.name placeholder = item.placeholder type = item.type)
                      .form__item.select-wrapper(data-aos='fade-up')  
                        .select
                          select.select__mobile(name="gender-mob")
                            option(value="" disabled selected)
                              |Gender
                            option(value = 'Male')
                              |Male
                            option(value = 'Female')
                              |Female
                          select.select__select(name="gender" style='width: 100%' data-select-placeholder='Gender' data-guests-select='') 
                            option
                            option(value = 'Male')
                              |Male
                            option(value = 'Female')
                              |Female
                    .booking-page__item
                      each item in ddata.second
                        .form__item(data-aos='fade-up')  
                          +input(name = item.name placeholder = item.placeholder type = item.type)
              .booking-page__container(data-guests-container='')
                .booking-page__inner  
                  h3.form__title.form__title--left(data-aos='fade-up') 
                    |Guest 1
                  .booking-page__top
                    .booking-page__item
                      each item in ddata.first
                        .form__item(data-aos='fade-up')  
                          +input(name = item.name placeholder = item.placeholder type = item.type)
                      .form__item.select-wrapper(data-aos='fade-up')  
                        .select
                          select.select__mobile(name="gender-mob")
                            option(value="" disabled selected)
                              |Gender
                            option(value = 'Male')
                              |Male
                            option(value = 'Female')
                              |Female
                          select.select__select(name="gender" style='width: 100%' data-select-placeholder='Gender') 
                            option
                            option(value = 'Male')
                              |Male
                            option(value = 'Female')
                              |Female
                    .booking-page__item
                      each item in ddata.second
                        .form__item(data-aos='fade-up')  
                          +input(name = item.name placeholder = item.placeholder type = item.type)
              .booking-page__inner
                .form__item(data-aos='fade-up') 
                  .button-icon.animation(data-add-guest='')
                    .button-icon__icon 
                      +plus-svg.button-icon__svg.button-icon__plus
                    span.button-icon__text.animation__span
                      |Add guest
                .form__item(data-aos='fade-up') 
                  +button.button--sticky(tag = 'button')
                    |Further
          .booking-page__col
            .booking-page__card(data-aos='fade-up')  
              .booking-page__card-container 
                .booking-page__card-row 
                  .booking-page__card-col
                    h4.booking-page__title
                      |Applying for a temporary visa
                  .booking-page__card-col
                    p.booking-page__card-text
                      |In order to take this tour, you need to apply for tour tickets (blanket visas).
                    p.booking-page__card-text
                      |Without a temporary visa, you will not be allowed out of the port.