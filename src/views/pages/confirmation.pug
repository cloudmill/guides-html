        text: '$1200'
      },
    ]
  .confirmation-page
    section.section.section--first 
      .container
        .navigation(data-aos='fade-up')   
          .navigation__inner
            .breadcrumb
              ul.breadcrumb__list 
                li.breadcrumb__item 
                  a.breadcrumb__link(href="#") 
                    |Home
                li.breadcrumb__item.breadcrumb__item--active 
                  a.breadcrumb__link(href="#")
                    |Booking an excursion
          .section__nav 
            .section__nav-item
              .section__nav-label 
                |tour
            .section__nav-item
              h2
                |Walking tour of St. Petersburg
    section.section.section--md 
      .container 
        .confirmation-page__container 
          .confirmation-page__info 
            ul.confirmation-page__list
              each item in ddata
                li.confirmation-page__list-item(data-aos='fade-up') 
                  .confirmation-page__list-col
                    .confirmation-page__list-name
                      |#{item.name}
                  .confirmation-page__list-col
                    .confirmation-page__list-text 
                      |#{item.text}
            .confirmation-page__total 
              .confirmation-page__total-item
                .confirmation-page__total-row 
                  .confirmation-page__total-col(data-aos='fade-up')
                    .confirmation-page__total-title 
                      |Total
                  .confirmation-page__total-col(data-aos='fade-up')
                    .confirmation-page__total-text 
                      |$1200
              .confirmation-page__total-item
                .confirmation-page__total-row 
                  .confirmation-page__total-col(data-aos='fade-up')
                    .confirmation-page__total-title 
                      |Prepayment
                  .confirmation-page__total-col(data-aos='fade-up')
                    +tabs
                    .confirmation-page__total-label 
                      |- 70% to be paid in cash upon arrival
          .confirmation-page__pay
            .cart-price.cart-price--row
              .cart-price__container 
                .cart-price__row 
                  .cart-price__col 
                    .cart-price__item(data-aos='fade-up') 
                      .cart-price__text 
                        |Total amount
                      .cart-price__number
                        |$360
                    .cart-price__item(data-aos='fade-up') 
                      .cart-price__text 
                        |Payment
                      .confirmation-page__pay-text 
                        |Bank card
                      a.cart-price__link(href="#") 
                        |Payment security is ensured
                  .cart-price__col(data-aos='fade-up')
                    +button.button--sticky(tag = 'a' href='#')
                      |Pay
