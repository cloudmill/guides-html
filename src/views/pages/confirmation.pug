        text: 'Individual/group'
      },
      {
        name: 'Start date',
        text: '23.11.2021'
      },
      {
        name: 'Start time',
        text: '11:00'
      },
      {
        name: 'Name',
        text: 'Kirill'
      },
      {
        name: 'Surname',
        text: 'Sherbakov'
      },
      {
        name: 'Phone',
        text: '+79112862563'
      },
      {
        name: 'E-mail',
        text: 'ksh@cloudmill.ru'
      },
      {
        name: 'Hotel name',
        text: 'Redisson Blue'
      },
      {
        name: 'Hotel address',
        text: 'Nevskiy, 145'
