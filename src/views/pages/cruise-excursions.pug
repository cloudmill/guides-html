extends ../layouts/master.pug

include  ../components/navigation
include  ../components/aside
include  ../components/tour
include  ../components/panel
include  ../components/excursion-card

block content
  .excursions-page
    section.section.section--panel.section--visible(data-aos='fade-up') 
      +panel(cruise=true disabled=true)
    section.section.section--md(data-aos='fade-up')
      .container
        +navigation(page="Shore excursions")
    section.section.section--md.section--visible.listing
      .container 
        .row
          .row__col
            +aside(cruise=true)
          .row__col
            .row__grid
              each item in data.landExcursion
                .row__item(data-aos='fade-up') 
                  +excursion-card.excursion-card--response(tag='div' title = item.title src = item.src cruise=true body='a' bodyHref='#1')
            .button-wrapper(data-aos='fade-up') 
              +button(tag='div')
                |Show more
      .lisiting__col
        .loader
    section.section 
      .container
        +tour(text = data.cruiseTour)