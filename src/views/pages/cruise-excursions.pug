extends ../layouts/master.pug

include  ../components/navigation
include  ../components/aside
include  ../components/tour
include  ../components/panel
include  ../components/excursion-card

block content
  .excursions-page
    section.section.section--panel 
      +panel(cruise=true)
    section.section.section--md
      .container
        +navigation(page="Shore excursions")
    section.section.section--md 
      .container 
        .row 
          .row__col
            +aside
          .row__col
            .row__grid  
              each item in data.landExcursion
                .row__item 
                  +excursion-card.excursion-card--response(title = item.title src = item.src cruise=true)
            .button-wrapper 
              +button(tag='div')
                |Show more
            +tour(text = data.cruiseTour)