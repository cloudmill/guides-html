extends ../layouts/master.pug

include  ../components/panel
include  ../components/navigation
include  ../components/thumb-slider
include  ../components/price
include  ../components/sticky
include  ../components/slider-buttons
include  ../components/excursion-card 
include  ../components/excursion-individual

block content 
  .excursion-page
    section.section.section--panel 
      +panel.panel--disabled(button = 'Change')
    section.section.section--md 
      .container
        .section__row
          .section__col
            .excursion-page__breadcrumbs 
              .breadcrumb
                ul.breadcrumb__list 
                  li.breadcrumb__item 
                    a.breadcrumb__link(href="#") 
                      |Home
                  li.breadcrumb__item 
                    a.breadcrumb__link(href="#") 
                      |Shore excursions
                  li.breadcrumb__item.breadcrumb__item--active 
                    a.breadcrumb__link(href="#")
                      |Relax tour
            .excursion-page__thumb-slider
              +thumb-slider
            .excursion-page__mobile  
              h1 
                |Relax tour
              +sticky-mobile(activity = true)
            .excursion-page__price 
              +price
              .excursion-page__price-btn 
                +button.button--xxl(tag = 'div')
                  |Compare
            section.section 
              +landmarks
            section.section
              +programm(label=true)
              .excursion-page__btn
                .excursion-page__btn-col
                  |Evening events are available
                .excursion-page__btn-col
                  +button.button--xl(tag = 'div')
                    |View
          .section__col(data-sticky-container='')
            .sticky.sticky--width(data-margin-top='178')
              +navigation(items=['Shore excursions'] page="Relax tour")
              .sticky__category 
                .category
                  each item in ['Individual', 'First choice', '-20% off']
                    .category__item
                      |#{item}
              .sticky__inner 
                .sticky__grid
                  each item in data.cruiseSticky.first
                    .sticky__item 
                      .sticky__label 
                        |#{item.label}
                      .sticky__text 
                        |#{item.text}
                  .sticky__item 
                    .sticky__label 
                      |activity
                    ul.sticky__dots
                      - for (i = 0; i < 5; i++)
                        li.sticky__dot(class=((i < 3) ? 'sticky__dot--active' : ''))
                  each item in data.cruiseSticky.second
                    .sticky__item 
                      .sticky__label 
                        |#{item.label}
                      .sticky__text 
                        |#{item.text}
              .sticky__inner 
                .sticky__price 
                  |from #[span.sticky__price-price $129] / person
              .sticky__button 
                a.button.button--sticky(href="#" data-scroll='#calculator') 
                  |Arrange a tour
    section.section#calculator
      .container
        +calculator(events=true)
    section.section 
      .container 
        .excursion-page__slider 
          .excursion-page__slider-row 
            .excursion-page__slider-col
              h3.excursion-page__title
                |Similar tours
            .excursion-page__slider-col
              +slider-buttons(next = 1 prev = 2)
          .swiper-container.swiper-container--slide-width-auto.swiper-container--visible.swiper-container--slide-height-max(data-slider-id='1' data-slider-next='1' data-slider-prev='2')
            .swiper-wrapper
              each item in data.mainSellers 
                .swiper-slide 
                  +excursion-card(tag='div' title = item.title src = item.src cruise=true)

