mixin aside 
  .aside.aside--active
    .aside__container
      +aside-button
      .aside__dropdown
        ul.aside__list
          li.aside__item 
            .aside__top 
              .aside__type 
                |Language
              .aside__select
                |Select
            .aside__body
              select(name="lang")
                option(value="default" selected="selected")
                  |Select language 
                option(value="en")
                  |English
                option(value="ru")
                  |Russian
          each item in data.asideExcursion
            li.aside__item 
              .aside__top 
                .aside__type 
                  |#{item.type}
                .aside__select
                  |Select
              .aside__body 
                each text in item.options
                  label.aside__label
                    input.aside__input(type="checkbox" name='checkbox' value='1')
                    .aside__checkbox
                      +check-svg.aside__svg
                    .aside__text 
                      |#{text.text}
        .aside__buttons 
          .aside__buttons-item 
            .button-icon
              .button-icon__icon 
                +repeat-svg.button-icon__svg
              .button-icon__text 
                |Clear
mixin aside-button 
  .aside-button 
    .aside-button__text 
      |Filters
    .aside-button__icon 
      +plus-svg.aside-button__svg