//- элементы блока form

mixin input
  if (attributes.type === 'phone')
    input.form__input(class=attributes.class type=attributes.type placeholder=attributes.placeholder name=attributes.name required data-mask='phone')
  else
    input.form__input(class=attributes.class type=attributes.type placeholder=attributes.placeholder name=attributes.name required)

mixin checkbox 
  .checkbox 
    label.checkbox__label
      input.checkbox__input(type="checkbox" name='checkbox-1' required)
      .checkbox__box 
        +check-svg.checkbox__svg
      if (attributes.text)
        .checkbox__text 
          |#{attributes.text}
      else 
        .checkbox__text 
          |I give my consent to #[a.checkbox__link(href='#') the processing of personal data]