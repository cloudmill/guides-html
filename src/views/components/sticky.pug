mixin sticky-mobile
  .sticky(data-sticky-for='1279')
    .sticky__category 
      .category
        each item in ['Individual', 'First choice', '-20% off']
          .category__item
            |#{item}
    .sticky__inner 
      .sticky__grid
        if (!attributes.activity)
          each item in attributes.data
            .sticky__item 
              .sticky__label 
                |#{item.label}
              .sticky__text 
                |#{item.text}
        else 
          each item in data.cruiseSticky.first
            .sticky__item 
              .sticky__label 
                |#{item.label}
              .sticky__text 
                |#{item.text}
          .sticky__item 
            .sticky__label 
              |activity
            ul.sticky__dots
              - for (i = 0; i < 5; i++)
                li.sticky__dot(class=((i < 3) ? 'sticky__dot--active' : ''))
          each item in data.cruiseSticky.second
            .sticky__item 
              .sticky__label 
                |#{item.label}
              .sticky__text 
                |#{item.text}
    .sticky__inner 
      .sticky__price 
        |from #[span.sticky__price-discont $159] #[span.sticky__price-price $129] / person
    .sticky__button 
      a.button.button--sticky.animation(href="#" data-scroll='#calculator') 
        span.animation__span 
          |Arrange a tour